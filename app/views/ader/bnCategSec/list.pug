extends ../aalayout/layout

block content
	.container.mt-3
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/ader") Home
				li.breadcrumb-item.active(aria-current="page") 品牌二级分类列表
		.row
			.col-12.text-right
				a.btn.btn-warning(href="/adBnCategSecAdd") +
		.row.mt-3
			.col-12
				table.table.table-hover.table-bordered
					thead
						tr
							th(style="width:8%") 序号
							th(style="width:15%") 编号
							th(style="width:15%") 名字
							th(style="width:15%") 英文
							th(style="width:15%") 中文
							th(style="width:12%") 权重
							th(style="width:20%") 所属一级
					tbody
						- let len = 0;
						each bnCategSec in bnCategSecs
							- len++;
							tr(class="bnCategSec-id-"+bnCategSec._id)
								td #{len}
								td: a(href="/adBnCategSec/"+bnCategSec._id) #{bnCategSec.code}
								td #{bnCategSec.nome}
								td #{bnCategSec.nomeEN}
								td #{bnCategSec.nomeCN}
								td #{bnCategSec.weight}
								td
									if bnCategSec.bnCategFir
										- bnCategFir = bnCategSec.bnCategFir;
										span #{bnCategFir.code}